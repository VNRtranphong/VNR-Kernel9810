ui_print("Kernel source git exynos-linux-stable");

ui_print(" * * * * * * * * * * * * * * * * *****");
ui_print("              VietNam VNR TEAMÂ®       ");
ui_print("               Kernel-VNR V8.0        ");
ui_print("               Linux 4.9.240          ");
